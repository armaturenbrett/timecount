.timecount id="#{widget_id}" data-preload="#{WidgetDatum.find('timecount').data.to_json}"
  .counter-details
    | {{#display.seconds}}
    .seconds
      div
        | {{display.seconds}}
      div
        = t('timecount.seconds')
    | {{/display.seconds}}

    | {{#display.minutes}}
    .minutes
      div
        | {{display.minutes}}
      div
        = t('timecount.minutes')
    | {{/display.minutes}}

    | {{#display.hours}}
    .hours
      div
        | {{display.hours}}
      div
        = t('timecount.hours')
    | {{/display.hours}}

    | {{#display.days}}
    .days
      div
        | {{display.days}}
      div
        = t('timecount.days')
    | {{/display.days}}

    | {{#display.months}}
    .months
      div
        | {{display.months}}
      div
        = t('timecount.months')
    | {{/display.months}}

    | {{#display.years}}
    .years
      div
        | {{display.years}}
      div
        = t('timecount.years')
    | {{/display.years}}

    | {{#display.decades}}
    .decades
      div
        | {{display.decades}}
      div
        = t('timecount.decades')
    | {{/display.decades}}

  .description
    .devider
      i.fa class="fa-{{icon}}"
    .name
      | {{name}}
